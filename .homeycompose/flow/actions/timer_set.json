{
  "id": "timer_set",
  "title": {
    "en": "Timer configuration"
  },
  "args": [
    {
      "name": "device",
      "type": "device",
      "filter": "driver_id=lametric"
    },
    {
      "name": "dura",
      "type": "number",
      "min": 1,
      "max": 100000,
      "step": 1,
      "placeholder": {
        "en": "Duration in seconds"
      }
    },
    {
      "name": "start",
      "type": "dropdown",
      "title": {
        "en": "Start now?"
      },
      "values": [
        {
          "id": "true",
          "label": {
            "en": "Start now"
          }
        },
        {
          "id": "false",
          "label": {
            "en": "Only set timer"
          }
        }
      ]
    }
  ]
}