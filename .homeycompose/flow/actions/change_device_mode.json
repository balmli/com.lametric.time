{
  "id": "change_device_mode",
  "title": {
    "en": "Change device mode"
  },
  "titleFormatted": {
    "en": "Change device mode to [[mode]]"
  },
  "args": [
    {
      "name": "device",
      "type": "device",
      "filter": "driver_id=lametric"
    },
    {
      "name": "mode",
      "type": "dropdown",
      "title": {
        "en": "Mode"
      },
      "values": [
        {
          "id": "manual",
          "label": {
            "en": "Manual"
          }
        },
        {
          "id": "auto",
          "label": {
            "en": "Auto"
          }
        },
        {
          "id": "schedule",
          "label": {
            "en": "Schedule"
          }
        },
        {
          "id": "kiosk",
          "label": {
            "en": "Kiosk"
          }
        }
      ]
    }
  ]
}